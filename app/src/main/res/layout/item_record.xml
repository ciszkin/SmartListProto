<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <import type="by.cisza.smartlistproto.utils.ExtensionsKt"/>

        <variable
            name="item"
            type="by.cisza.smartlistproto.domain.SmartRecord" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onDoneClick"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_half"
            android:layout_marginVertical="@dimen/margin_half"
            app:cardElevation="@dimen/elevation"
            android:onClick="@{onItemClick}"
            android:backgroundTint="@{item.quantityLeft == 0.0 ? @color/grey : @color/white}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/is_done"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/margin_half"
                    android:onClick="@{onDoneClick}"
                    android:checked="@{item.quantityLeft == 0.0}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/record_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:text="@{item.title}"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/record_quantity_and_price"
                    app:layout_constraintStart_toEndOf="@id/is_done"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/record_quantity_and_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:text='@{String.valueOf(item.quantityLeft).concat(" x ").concat(String.valueOf(item.price)).concat(item.currency)}'
                    android:visibility="@{item.quantityLeft == 0.0 ? View.INVISIBLE : View.VISIBLE}"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="7 x 5.22 BYN" />


                <TextView
                    android:id="@+id/record_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:text="@{item.description}"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/record_sum"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/is_done"
                    app:layout_constraintTop_toBottomOf="@+id/record_name"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/record_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:text="@{ExtensionsKt.toAmount(item.sum, item.currency)}"
                    android:visibility="@{item.quantityLeft == 0.0 ? View.INVISIBLE : View.VISIBLE}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/record_description"
                    app:layout_constraintTop_toBottomOf="@+id/record_quantity_and_price"
                    tools:text="36.54 BYN" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>